//- Template for user profile page
#cover-wrapper
.profile-wrapper
	.faneron-container
		.profile-info
			.profile-header
				.crop-box
				.basic-info
					h1.username {{user.info.username}}
					h4.email {{user.info.email}}
					h3.experience: span {{user.rank.xp}} Experience
					a.btn.btn-primary(href="#" ng-show="$root.user._id === user._id && !toggle" ng-click="toggle = true")
						i.fa.fa-fw.fa-pencil 
						span Edit profile picture
					form(role="form", action="/s3/profile/upload", method="post", enctype="multipart/form-data" ng-show="loggedInUser._id === user._id && toggle").bio-edit
						input(type="text" name="username" hidden ng-model="user.info.username")
						input(name="file" accept="image/*" type="file" required)
						.form-group
							input(type="submit", value="Submit").btn.btn-primary.btn-inline
							a(href="#" ng-click="toggle=false").cancel-button Cancel

			.profile-nav
				ul.nav.nav-pills
					//- ui-sref-active binds the "active" class to the li if the program is at the ui-sref specified in the a
					li(ui-sref-active="active") 
						a(ui-sref=".bio") Bio
					li(ui-sref-active="active")
						a(ui-sref=".projects") Projects
					//li(ui-sref-active="active")
						a(ui-sref=".thoughts") Thoughts
					li(ui-sref-active="active")
						a(ui-sref=".art") Artwork
			//- have to put this here to render sub-views in jade (weird jade bug)
			<div class="profile-view" ui-view></div>
			
